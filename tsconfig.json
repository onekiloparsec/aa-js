{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "lib": [
      "es6",
      "esnext",
      "es2016",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types.d.ts"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./tests/*"
      ]
    }
  },
  "types": [
    "node",
    "vite/client",
    "vitest/globals",
    "vitest/importMeta"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/aajs.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
